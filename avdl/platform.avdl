@namespace("com.toptal.platform")

/**
 Platform protocol
*/
protocol platform {

  enum RoleType {
    developer,
    designer,
    businees_manager
  }

  @bq-table("roles")
  record Role {
    /** unique id of a role */
    @origin("com.toptal.platform.Role#role_type")
    int id;
    union {null, RoleType} role_type;

    /** Some more documentation

    leave one line to prevent tirggering definition blockl.
    */
    union {null, int} number_of_logins;
  }


}
